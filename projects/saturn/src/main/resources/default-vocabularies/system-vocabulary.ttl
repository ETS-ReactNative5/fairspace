@prefix fs: <http://fairspace.io/ontology#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix schema: <http://www.schema.org/> .
@prefix dash: <http://datashapes.org/dash#> .

########################
### Fixed Namespaces ###
########################

fs:FOAF-Namespace a sh:PrefixDeclaration ;
   sh:name "foaf: (Friend of a friend)" ;
   sh:prefix "foaf" ;
   fs:fixedShape true ;
   fs:usableInVocabulary true ;
   sh:namespace <http://xmlns.com/foaf/0.1/> .

fs:RDF-Namespace a sh:PrefixDeclaration ;
   sh:name "rdf: " ;
   sh:prefix "rdf" ;
   fs:fixedShape true ;
   sh:namespace <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

fs:RDFS-Namespace a sh:PrefixDeclaration ;
   sh:name "rdfs: (RDF Schema)" ;
   sh:prefix "rdfs" ;
   fs:fixedShape true ;
   sh:namespace <http://www.w3.org/2000/01/rdf-schema#> .

fs:XSD-Namespace a sh:PrefixDeclaration ;
   sh:name "xsd: (XML Schema Definition)" ;
   sh:prefix "xsd" ;
   fs:fixedShape true ;
   sh:namespace <http://www.w3.org/2001/XMLSchema#> .

fs:Schema-Namespace a sh:PrefixDeclaration ;
   sh:name "schema: (schema.org)" ;
   sh:prefix "schema" ;
   fs:fixedShape true ;
   fs:usableInVocabulary true ;
   sh:namespace <http://schema.org/> .

fs:Fairspace-Namespace a sh:PrefixDeclaration ;
   sh:name "fs: (Fairspace global)" ;
   sh:prefix "fs" ;
   fs:fixedShape true ;
   sh:namespace <http://fairspace.io/ontology#> .

fs:Shacl-Namespace a sh:PrefixDeclaration ;
  sh:name "sh: (SHACL)" ;
  sh:prefix "sh" ;
  fs:fixedShape true ;
  sh:namespace <http://www.w3.org/ns/shacl#> .

########################
###   Fixed Shapes   ###
########################

## Class Shapes

fs:FileShape a fs:ClassShape ;
    sh:description "A single file." ;
    sh:name "File" ;
    sh:targetClass fs:File ;
    fs:machineOnly true ;
    sh:ignoredProperties ( rdf:type owl:sameAs fs:movedTo fs:versions fs:currentVersion) ;
    fs:fixedShape true ;
    fs:systemProperties
        fs:createdByShape,
        fs:dateCreatedShape,
        fs:deletedByShape,
        fs:dateDeletedShape,
        fs:labelShape,
        fs:commentShape,
        fs:replacesShape,
        fs:isReplacedByShape ;
    sh:property
        fs:createdByShape,
        fs:dateCreatedShape,
        fs:deletedByShape,
        fs:dateDeletedShape,
        fs:labelShape,
        fs:commentShape,
        fs:replacesShape,
        fs:isReplacedByShape .



fs:DirectoryShape a fs:ClassShape ;
    sh:description "A directory containing multiple files." ;
    sh:name "Directory" ;
    sh:targetClass fs:Directory ;
    fs:machineOnly true ;
    sh:ignoredProperties ( rdf:type owl:sameAs fs:contains fs:movedTo) ;
    fs:fixedShape true ;
    fs:systemProperties
        fs:containsShape,
        fs:createdByShape,
        fs:dateCreatedShape,
        fs:modifiedByShape,
        fs:dateModifiedShape,
        fs:deletedByShape,
        fs:dateDeletedShape,
        fs:labelShape,
        fs:commentShape ;
    sh:property
        fs:createdByShape,
        fs:dateCreatedShape,
        fs:modifiedByShape,
        fs:dateModifiedShape,
        fs:deletedByShape,
        fs:dateDeletedShape,
        fs:labelShape,
        fs:commentShape .

fs:CollectionShape a fs:ClassShape ;
    sh:description "Collection of files with associated metadata and access rules." ;
    sh:name "Collection" ;
    sh:targetClass fs:Collection ;
    fs:machineOnly true ;
    sh:ignoredProperties ( rdf:type owl:sameAs ) ;
    fs:fixedShape true ;
    fs:systemProperties
        fs:ownedByShape,
        fs:createdByShape,
        fs:dateCreatedShape,
        fs:modifiedByShape,
        fs:dateModifiedShape,
        fs:deletedByShape,
        fs:dateDeletedShape,
        fs:labelShape,
        fs:commentShape ;
    sh:property
        fs:ownedByShape,
        fs:createdByShape,
        fs:dateCreatedShape,
        fs:modifiedByShape,
        fs:dateModifiedShape,
        fs:deletedByShape,
        fs:dateDeletedShape,
        fs:labelShape,
        fs:commentShape .

fs:User a fs:ClassShape ;
    sh:description "User" ;
    sh:name "User" ;
    sh:targetClass fs:User ;
    fs:machineOnly true ;
    sh:ignoredProperties ( rdf:type owl:sameAs ) ;
    fs:fixedShape true ;
    sh:property
        fs:labelShape,
        fs:commentShape,
        fs:userEmailShape,
        fs:canListShape,
        fs:canReadShape,
        fs:canWriteShape,
        fs:canManageShape,
        fs:isMemberOfShape,
        fs:isManagerOfShape .

fs:Workspace a fs:ClassShape ;
  sh:description "Resource description for the current workspace." ;
  sh:name "Workspace" ;
  sh:targetClass fs:Workspace ;
  fs:machineOnly true ;
  fs:fixedShape true ;
  sh:ignoredProperties ( rdf:type owl:sameAs ) ;
  sh:property
      fs:labelShape,
      [
        a fs:DatatypePropertyShape ;
        sh:path fs:workspaceDescription ;
        sh:name "Workspace description" ;
        sh:description "A markdown formatted description for the workspace homepage." ;
        sh:datatype fs:markdown ;
        sh:maxCount 1 ;
        sh:minCount 1 ;
        sh:order 2 ;
      ]
#     ,[
#        a fs:ExternalIRIPropertyShape ;
#        sh:path fs:workspaceExternalLink ;
#        sh:name "External links" ;
#        sh:description "External links that will be available from the homepage." ;
#        fs:externalLink true ;
#        sh:nodeKind sh:IRI ;
#        sh:order 2 ;
#      ]
.

## Property Shapes

fs:blobIdShape a fs:DatatypePropertyShape ;
    sh:name "BlobID";
    sh:description "Blob ID in the blob store" ;
    sh:path fs:blobId ;
    sh:datatype xsd:string ;
    fs:machineOnly true .

fs:collectionTypeShape a fs:DatatypePropertyShape ;
    sh:name "Collection type";
    sh:description "Collection Type";
    sh:path fs:collectionType ;
    sh:datatype xsd:string ;
    fs:machineOnly true .

fs:labelShape a fs:DatatypePropertyShape ;
    sh:name "Label" ;
    sh:description "Human readable label for this resource." ;
    sh:datatype xsd:string ;
    sh:maxCount 1 ;
    dash:singleLine true ;
    fs:fixedShape true ;
    fs:importantProperty true ;
    sh:path rdfs:label;
    sh:order 0.

fs:commentShape a fs:DatatypePropertyShape ;
    sh:name "Description" ;
    sh:description "Human friendly description." ;
    sh:datatype xsd:string ;
    sh:maxCount 1 ;
    fs:fixedShape true ;
    sh:path rdfs:comment .

fs:dateCreatedShape a fs:DatatypePropertyShape ;
    sh:name "Created" ;
    sh:description "Date created" ;
    sh:datatype xsd:dateTime ;
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:dateCreated .

fs:dateModifiedShape a fs:DatatypePropertyShape ;
    sh:name "Modified" ;
    sh:description "Date modified" ;
    sh:datatype xsd:dateTime ;
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:dateModified .

fs:dateDeletedShape a fs:DatatypePropertyShape ;
    sh:name "Deleted" ;
    sh:description "Date deleted" ;
    sh:datatype xsd:dateTime ;
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:dateDeleted .

fs:fileSizeShape a fs:DatatypePropertyShape ;
    sh:name "File size" ;
    sh:description "File size in bytes" ;
    sh:datatype xsd:long ;
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:fileSize .

fs:md5Shape a fs:DatatypePropertyShape ;
    sh:name "MD5 checksum" ;
    sh:description "Hash uniquely identifying the content of this file" ;
    sh:datatype xsd:string ;
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:md5 .

fs:userEmailShape a fs:DatatypePropertyShape ;
    sh:name "Email" ;
    sh:description "Email address" ;
    sh:datatype xsd:string ;
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:email .

fs:statusShape a fs:ControlledVocabularyPropertyShape ;
    sh:name "Status" ;
    sh:description "Status of this resource." ;
    sh:in (
      "Active"
      "Archived"
      ) ;
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:path fs:status ;
    sh:order 1 .

fs:statusDateModifiedShape a fs:DatatypePropertyShape ;
    sh:name "Modified" ;
    sh:description "Date modified" ;
    sh:datatype xsd:dateTime ;
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:statusDateModified .

## Relation Shapes

fs:ownedByShape a fs:RelationShape ;
    sh:name "Owned By" ;
    sh:description "Owner workspace" ;
    sh:class fs:Workspace ;
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:ownedBy .

fs:canListShape a fs:RelationShape ;
    sh:name "Can list" ;
    sh:description "Visible collections" ;
    sh:class fs:Collection ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:list .

fs:canReadShape a fs:RelationShape ;
    sh:name "Can read" ;
    sh:description "Can read collections" ;
    sh:class fs:Collection ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:read .

fs:canWriteShape a fs:RelationShape ;
    sh:name "Can write to" ;
    sh:description "Can write to collections" ;
    sh:class fs:Collection ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:write .

 fs:canManageShape a fs:RelationShape ;
     sh:name "Can manage" ;
     sh:description "Can manage collections" ;
     sh:class fs:Collection ;
     fs:machineOnly true ;
     fs:fixedShape true ;
     sh:path fs:manage .

 fs:isMemberOfShape a fs:RelationShape ;
     sh:name "Is a member of" ;
     sh:description "Is a member of workspaces." ;
     sh:class fs:Workspace;
     fs:machineOnly true ;
     fs:fixedShape true ;
     sh:path fs:isMemberOf .

 fs:isManagerOfShape a fs:RelationShape ;
     sh:name "Is a manager of" ;
     sh:description "Is a manager of workspaces" ;
     sh:class fs:Workspace;
     fs:machineOnly true ;
     fs:fixedShape true ;
     sh:path fs:isManagerOf .

fs:createdByShape a fs:RelationShape ;
    sh:name "Created By" ;
    sh:description "User that created this resource." ;
    sh:class fs:User ;
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:createdBy .

fs:modifiedByShape a fs:RelationShape ;
    sh:name "Last Modified By" ;
    sh:description "User that last modified this resource." ;
    sh:class fs:User ;
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:modifiedBy .

fs:deletedByShape a fs:RelationShape ;
    sh:name "Deleted By" ;
    sh:description "User that deleted this resource." ;
    sh:class fs:User ;
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:deletedBy .

fs:statusModifiedByShape a fs:RelationShape ;
    sh:name "Last Modified By" ;
    sh:description "User that last modified this resource." ;
    sh:class fs:User ;
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:statusModifiedBy .

fs:replacesShape a fs:RelationShape ;
                  sh:name "Replaces" ;
                  sh:description "Old version of this file." ;
                  sh:class fs:File ;
                  sh:maxCount 1 ;
                  fs:inverseRelation fs:isReplacedByShape ;
                  sh:path fs:replaces .

fs:isReplacedByShape a fs:RelationShape ;
                   sh:name "Is Replaced By" ;
                   sh:description "New version of this file." ;
                   sh:class fs:File ;
                   sh:maxCount 1 ;
                   fs:inverseRelation fs:replacesShape ;
                   sh:path fs:isReplacedBy .

########################
### Fixed Vocabulary ###
########################

fs:ClassShape a sh:NodeShape .
fs:DatatypePropertyShape a rdf:Class ;
    rdfs:subClassOf sh:PropertyShape .

#fs:ExternalIRIPropertyShape a rdf:Class ;
#    rdfs:subClassOf sh:PropertyShape .

fs:ControlledVocabularyPropertyShape a rdf:Class ;
    rdfs:subClassOf sh:PropertyShape .

fs:RelationShape a rdf:Class ;
    rdfs:subClassOf sh:PropertyShape .
fs:Class a rdf:Class .

xsd:string rdfs:label "String" ;
    rdfs:comment "Reference to xsd:string." .

xsd:integer rdfs:label "Integer" ;
    rdfs:comment "Reference to xsd:integer." .

xsd:long rdfs:label "Integer(long)" ;
    rdfs:comment "Reference to xsd:long." .

xsd:date rdfs:label "Date" ;
    rdfs:comment "Reference to xsd:date." .

xsd:dateTime rdfs:label "Date and time" ;
    rdfs:comment "Reference to xsd:datetime." .

fs:File a fs:Class .
fs:Collection a fs:Class .
fs:User a fs:Class .
fs:Directory a fs:Class ;
    rdfs:subClassOf fs:File .

fs:dateCreated a rdf:Property .
fs:createdBy a rdf:Property .
fs:inverseRelation a rdf:Property .
