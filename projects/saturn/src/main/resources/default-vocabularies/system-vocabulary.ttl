@prefix fs: <http://fairspace.io/ontology#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix schema: <http://www.schema.org/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/#> .
@prefix osiris: <http://osiris.fairspace.io/ontology/#> .
@prefix icdo3: <http://icdo3.fairspace.io/ontology/#> .
@prefix fhir: <http://hl7.org/fhir/STU3/#> .

########################
###   Fixed Shapes   ###
########################

## Class Shapes

fs:FileShape a fs:ClassShape ;
    sh:closed true ; 
    sh:description "A single file or a directory containing multiple files." ;
    sh:name "File" ;
    sh:targetClass fs:File ; 
    sh:ignoredProperties ( rdf:type owl:sameAs ) ;
    sh:property
        fs:associatedAnalysisShape,
        fs:filePathShape,
        rdfs:labelShape,
        rdfs:commentShape .

fs:CollectionShape a fs:ClassShape ;
    sh:closed true ; 
    sh:description "Collection of files with associated metadata and access rules." ;
    sh:name "Collection" ;
    sh:targetClass fs:Collection ; 
    sh:ignoredProperties ( rdf:type owl:sameAs ) ;
    sh:property
        schema:creatorShape,
        schema:dateCreatedShape,
        fs:hasFileShape,
        fs:aboutPersonShape,
        fs:aboutMaterialShape,
        fs:partOfProjectShape,
        rdfs:labelShape,
        rdfs:commentShape .

fs:UserShape a fs:ClassShape ;
    sh:closed true ; 
    sh:description "Description for fs:User" ;
    sh:name "User" ;
    sh:targetClass fs:User ; 
    sh:ignoredProperties ( rdf:type owl:sameAs ) ;
    sh:property
        rdfs:labelShape,
        rdfs:commentShape .

## Property Shapes

rdfs:labelShape a fs:PropertyShape ;
    sh:name "Label" ;
    sh:description "Human readable label for this resource." ;
    sh:datatype xsd:string ;
    sh:maxCount 1 ;
    sh:maxLength 128 ;
    sh:path rdfs:label . 
 
rdfs:commentShape a fs:PropertyShape ;
    sh:name "Description" ;
    sh:description "Human friendly description." ;
    sh:datatype xsd:string ;
    sh:maxCount 1 ;
    sh:path rdfs:comment . 
     
schema:dateCreatedShape a fs:PropertyShape ;
    sh:name "Date created" ;
    sh:description "Time at point of creation" ;
    sh:datatype xsd:dateTime ;
    sh:maxCount 1 ;
    fs:machineOnly true ;
    sh:path schema:dateCreated . 

fs:dateModifiedShape a fs:PropertyShape ;
    sh:name "Modified time" ;
    sh:description "Time at point last modification" ;
    sh:datatype xsd:dateTime ;
    sh:maxCount 1 ;
    fs:machineOnly true ;
    sh:path fs:dateModified .

fs:dateDeletedShape a fs:PropertyShape ;
    sh:name "Deleted at" ;
    sh:description "Time at point deletion." ;
    sh:datatype xsd:dateTime ;
    sh:maxCount 1 ;
    fs:machineOnly true ;
    sh:path fs:dateDeleted . 

fs:filePathShape a fs:PropertyShape ; 
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:name "File path" ;
    sh:description "File path" ;
    fs:machineOnly true ; 
    sh:path fs:filePath .

fs:fileSizeShape a fs:PropertyShape ;
    sh:name "File size" ; 
    sh:description "File size in bytes" ; 
    sh:datatype xsd:long ;
    sh:maxCount 1 ;
    fs:machineOnly true ;
    sh:path fs:fileSize .

fs:md5Shape a fs:PropertyShape ;
    sh:name "MD5 checksum" ; 
    sh:description "Hash uniquely identifying the content of this file" ; 
    sh:datatype xsd:string ;
    sh:maxCount 1 ;
    fs:machineOnly true ;
    sh:path fs:md5 .


## Relation Shapes

schema:creatorShape a fs:RelationShape ; 
    sh:name "Creator" ;
    sh:description "User that created this resource." ;
    sh:class fs:User ; 
    sh:maxCount 1 ;
    fs:machineOnly true ;
    sh:path schema:creator .

fs:modifiedByShape a fs:RelationShape ; 
    sh:name "Last Modified By" ;
    sh:description "User that last modified this resource." ;
    sh:class fs:User ; 
    sh:maxCount 1 ;
    fs:machineOnly true ;
    sh:path fs:modifiedBy .

fs:deletedByShape a fs:RelationShape ; 
    sh:name "Deleted By" ;
    sh:description "User that deleted this resource." ;
    sh:class fs:User ; 
    sh:maxCount 1 ;
    fs:machineOnly true ;
    sh:path fs:deletedBy .

fs:hasCollectionShape a fs:RelationShape ; 
    sh:name "Associated collections" ;
    sh:description "" ;
    sh:class fs:Collection ; 
    sh:path fs:hasCollection .

fs:hasFileShape a fs:RelationShape ; 
    sh:name "Files in this collection" ;
    sh:description "All files and directories that are in (sub)directories." ; 
    sh:class fs:File ;
    sh:path fs:hasFile .


########################
### Fixed Vocabulary ###
########################

fs:ClassShape a sh:NodeShape .
fs:PropertyShape a rdf:Class ;
    rdfs:subClassOf sh:PropertyShape .
fs:RelationShape a rdf:Class ;
    rdfs:subClassOf sh:PropertyShape .
fs:Class a rdf:Class .

xsd:string a fs:Datatype ;
    rdfs:label "String" ;
    rdfs:comment "Reference to xsd:string." .

xsd:integer a fs:Datatype ;
    rdfs:label "Integer" ;
    rdfs:comment "Reference to xsd:integer." .

xsd:long a fs:Datatype ;
    rdfs:label "Integer(long)" ;
    rdfs:comment "Reference to xsd:long." .

xsd:date a fs:Datatype ;
    rdfs:label "Date" ;
    rdfs:comment "Reference to xsd:date." .

xsd:dateTime a fs:Datatype ;
    rdfs:label "Date and time" ;
    rdfs:comment "Reference to xsd:datetime." .

fs:File a fs:Class .
fs:Collection a fs:Class.
fs:User a fs:Class .
fs:Directory a fs:Class ;
    rdfs:subClassOf fs:File .

schema:dateCreated a rdf:Property .
schema:creator a rdf:Property .
