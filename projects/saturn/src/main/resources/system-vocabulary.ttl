fs:User a rdfs:Class, sh:NodeShape ;
    sh:description "User" ;
    sh:name "User" ;
    fs:machineOnly true ;
    sh:ignoredProperties ( rdf:type owl:sameAs ) ;
    sh:property
    [
         sh:name "Label" ;
         sh:description "Human readable label for this resource." ;
         sh:datatype xsd:string ;
         sh:maxCount 1 ;
         dash:singleLine true ;
         fs:importantProperty true ;
         sh:path rdfs:label;
         sh:order 0
    ],
    [
         sh:name "Description" ;
         sh:description "Human friendly description." ;
         sh:datatype xsd:string ;
         sh:maxCount 1 ;
         sh:path rdfs:comment
    ],
    [
         sh:name "Email" ;
         sh:description "Email address" ;
         sh:datatype xsd:string ;
         sh:maxCount 1 ;
         fs:machineOnly true ;
         sh:path fs:email
    ],
    [
        sh:name "Is admin" ;
        sh:description "Is an admin." ;
        sh:class xsd:boolean;
        fs:machineOnly true ;
        sh:maxCount 1 ;
        sh:path fs:isAdmin
    ],
    [
        sh:name "Can view public metadata" ;
        sh:description "Allows the user to view public metadata." ;
        sh:class xsd:boolean;
        fs:machineOnly true ;
        sh:maxCount 1 ;
        sh:path fs:canViewPublicMetadata ;
    ],
    [
        sh:name "Can view public data" ;
        sh:description "Allows the user to view public data." ;
        sh:class xsd:boolean;
        fs:machineOnly true ;
        sh:maxCount 1 ;
        sh:path fs:canViewPublicData ;
    ],
    [
        sh:name "Can add shared metadata" ;
        sh:description "Allows the user to create shared metadata entities." ;
        sh:class xsd:boolean;
        fs:machineOnly true ;
        sh:maxCount 1 ;
        sh:path fs:canAddSharedMetadata ;
    ],
    [
         sh:name "Can list" ;
         sh:description "Visible collections" ;
         sh:class fs:Collection ;
         fs:machineOnly true ;
         sh:path fs:list
    ],
    [
         sh:name "Can read" ;
         sh:description "Can read collections" ;
         sh:class fs:Collection ;
         fs:machineOnly true ;
         sh:path fs:read
    ],
    [
         sh:name "Can write to" ;
         sh:description "Can write to collections" ;
         sh:class fs:Collection ;
         fs:machineOnly true ;
         sh:path fs:write
    ],
    [
        sh:name "Can manage" ;
        sh:description "Can manage collections" ;
        sh:class fs:Collection ;
        fs:machineOnly true ;
        sh:path fs:manage
    ],
    [
         sh:name "Is a member of" ;
         sh:description "Is a member of workspaces." ;
         sh:class fs:Workspace;
         fs:machineOnly true ;
         sh:path fs:isMemberOf
    ],
    [
        sh:name "Is a manager of" ;
        sh:description "Is a manager of workspaces" ;
        sh:class fs:Workspace;
        fs:machineOnly true ;
        sh:path fs:isManagerOf
] .

fs:Workspace a rdfs:Class, sh:NodeShape ;
    sh:description "Resource description for the current workspace." ;
    sh:name "Workspace" ;
    fs:machineOnly true ;
    sh:ignoredProperties ( rdf:type owl:sameAs ) ;
    sh:property
    [
        sh:name "Label" ;
        sh:description "Human readable label for this resource." ;
        sh:datatype xsd:string ;
        sh:maxCount 1 ;
        dash:singleLine true ;
        fs:importantProperty true ;
        fs:machineOnly true ;
        sh:path rdfs:label ;
        sh:order 0
    ],
    [
        sh:name "Short description";
        sh:description "Short public description of the workspace." ;
        sh:datatype xsd:string ;
        sh:maxCount 1 ;
        dash:singleLine true ;
        fs:importantProperty true ;
        sh:path rdfs:comment ;
        sh:order 1
    ],
    [
        sh:path fs:workspaceDescription ;
        sh:name "Workspace description" ;
        sh:description "A markdown formatted description for the workspace homepage." ;
        sh:datatype fs:markdown ;
        sh:maxCount 1 ;
        sh:minCount 1 ;
        sh:order 2
    ] .

