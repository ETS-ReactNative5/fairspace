## Class Shapes

fs:File a rdfs:Class, sh:NodeShape ;
    sh:description "A single file." ;
    sh:name "File" ;
    fs:machineOnly true ;
    sh:ignoredProperties ( rdf:type owl:sameAs fs:movedTo fs:versions fs:currentVersion) ;
    fs:systemProperties
    [
        sh:name "Created By" ;
        sh:description "User that created this resource." ;
        sh:class fs:User ;
        sh:maxCount 1 ;
        fs:machineOnly true ;
        sh:path fs:createdBy
    ],
    [
        sh:name "Created" ;
        sh:description "Date created" ;
        sh:datatype xsd:dateTime ;
        sh:maxCount 1 ;
        fs:machineOnly true ;
        sh:path fs:dateCreated
    ],
    [
        sh:name "Deleted By" ;
        sh:description "User that deleted this resource." ;
        sh:class fs:User ;
        sh:maxCount 1 ;
        fs:machineOnly true ;
        sh:path fs:deletedBy
    ],
    [
        sh:name "Deleted" ;
        sh:description "Date deleted" ;
        sh:datatype xsd:dateTime ;
        sh:maxCount 1 ;
        fs:machineOnly true ;
        sh:path fs:dateDeleted
    ],
    [
        sh:name "Label" ;
        sh:description "Human readable label for this resource." ;
        sh:datatype xsd:string ;
        sh:maxCount 1 ;
        dash:singleLine true ;
        fs:importantProperty true ;
        sh:path rdfs:label;
        sh:order 0
    ],
    [
        sh:name "Description" ;
        sh:description "Human friendly description." ;
        sh:datatype xsd:string ;
        sh:maxCount 1 ;
        sh:path rdfs:comment
    ],
    [
        sh:name "Replaces" ;
        sh:description "Old version of this file." ;
        sh:class fs:File ;
        sh:maxCount 1 ;
        sh:path fs:replaces
    ],
    [
        a fs:RelationShape ;
        sh:name "Is Replaced By" ;
        sh:description "New version of this file." ;
        sh:class fs:File ;
        sh:maxCount 1 ;
        sh:path fs:isReplacedBy
    ] ;
    sh:property
    [
        sh:name "Created By" ;
        sh:description "User that created this resource." ;
        sh:class fs:User ;
        sh:maxCount 1 ;
        fs:machineOnly true ;
        sh:path fs:createdBy
    ],
    [
        sh:name "Created" ;
        sh:description "Date created" ;
        sh:datatype xsd:dateTime ;
        sh:maxCount 1 ;
        fs:machineOnly true ;
        fs:fixedShape true ;
        sh:path fs:dateCreated
    ],
    [
        sh:name "Deleted By" ;
        sh:description "User that deleted this resource." ;
        sh:class fs:User ;
        sh:maxCount 1 ;
        fs:machineOnly true ;
        sh:path fs:deletedBy
    ],
    [
        sh:name "Deleted" ;
        sh:description "Date deleted" ;
        sh:datatype xsd:dateTime ;
        sh:maxCount 1 ;
        fs:machineOnly true ;
        sh:path fs:dateDeleted
    ],
    [
        sh:name "Label" ;
        sh:description "Human readable label for this resource." ;
        sh:datatype xsd:string ;
        sh:maxCount 1 ;
        dash:singleLine true ; ;
        fs:importantProperty true ;
        sh:path rdfs:label;
        sh:order 0
    ],
    [
        sh:name "Description" ;
        sh:description "Human friendly description." ;
        sh:datatype xsd:string ;
        sh:maxCount 1 ;
        sh:path rdfs:comment
    ],
    [
         sh:name "Replaces" ;
         sh:description "Old version of this file." ;
         sh:class fs:File ;
         sh:maxCount 1 ;
         sh:path fs:replaces
    ],
    [
         sh:name "Is Replaced By" ;
