# Moves a file or a directory from one location to another
# 0 - from
# 1 - to

PREFIX fs: <http://fairspace.io/ontology#>

# Move the main resource
DELETE { ?s fs:filePath ?0 }
INSERT { ?s fs:filePath ?1 }
WHERE { ?s fs:filePath ?0 };

# Move the children
DELETE { ?s fs:filePath ?path }
INSERT { ?s fs:filePath ?newPath}
WHERE {?s fs:filePath ?path . FILTER(STRSTARTS(?path, CONCAT(?0, '/')))
BIND(CONCAT(?1, '/', SUBSTR(?path, STRLEN(?0) + 2)) as ?newPath) };