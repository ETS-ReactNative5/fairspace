# Creates a directory
#
# 0 - base IRI as string
# 1 - type
# 2 - path
# 3 - creator

PREFIX fs: <http://fairspace.io/ontology#>
INSERT { ?iri a ?1; fs:filePath ?2; fs:createdBy ?3; fs:dateCreated ?date; fs:dateModified ?date; fs:modifiedBy ?3; fs:fileSize 0 .}
WHERE { BIND(IRI(CONCAT(?0, STRUUID())) as ?iri) BIND(NOW() as ?date) }